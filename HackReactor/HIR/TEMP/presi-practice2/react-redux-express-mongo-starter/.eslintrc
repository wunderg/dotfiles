{
  "extends": "airbnb",
  "env": {
    "browser": true,
    "mocha": true,
    "node": true
  },
  "rules": {
    "valid-jsdoc": 2,

    "react/jsx-uses-react": 2,
    "react/jsx-uses-vars": 2,
    "react/react-in-jsx-scope": 2,
    "react/jsx-boolean-value": 0,

    "no-var": 0,
    "vars-on-top": 0,

    "comma-dangle": 0,
    "max-len": [2, 150, 4]
  },
  "plugins": [
    "react"
  ]
}
